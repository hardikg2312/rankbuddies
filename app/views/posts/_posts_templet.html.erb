<style type="text/css">
	.user_show_media_list_border{
    border: 1px solid <%= @bg_color %>;
  }
  .pull-left img{
    width: 50px;
    height: 50px;
    border-radius: 4px;
  }
</style>

<% posts.each do |p| %>
	<ul class="media-list user_show_media_list user_show_media_list_border border_round">
    <li class="media">
      <% if p.user.profile_photo %>
	      <%= link_to image_tag(p.user.profile_photo), p.user, :class => "pull-left border_round" %>
	    <% else %>
	      <%= link_to image_tag('user_new/login-with-facbook.jpg'), p.user, :class => "pull-left border_round" %>
	    <% end %>
      <div class="media-body">
        <h5 class="media-heading"><%= link_to p.user.display_name, p.user %></h5>
        <%= p.content %><br>
        <% if !p.photo_url.blank? %>
        	<%= image_tag p.photo_url, :class => "user_show_media_list_img" %>
        <% end %>
        <!-- Nested media object -->
        <div class="media">
          <!-- Comments will come over here -->
       </div>
      </div>
    </li>
  </ul>
<% end %>